<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            tools:text="-13Â°C"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_weather_view_temperature"
            app:layout_constraintTop_toTopOf="@+id/iv_weather_view"
            app:layout_constraintStart_toEndOf="@+id/iv_weather_view"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_weather_view_place"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:background="#ade"
            tools:srcCompat="@drawable/weather_clear"
            android:id="@+id/iv_weather_view"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            tools:text="Vienna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_weather_view_place"
            app:layout_constraintStart_toEndOf="@+id/iv_weather_view"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_weather_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_weather_view_temperature"/>


</androidx.constraintlayout.widget.ConstraintLayout>